import time
#下記がTwitterAPIの認証コードです。
from requests_oauthlib import OAuth1Session
CONSUMER_KEY = "CONSUMER_KEY"
CONSUMER_SECRET = "CONSUMER_SECRET"
ACCESS_TOKEN = "ACCESS_TOKEN"
ACCESS_TOKEN_SECRET = "ACCESS_TOKEN_SECRET"
twitter = OAuth1Session(CONSUMER_KEY,CONSUMER_SECRET,ACCESS_TOKEN,ACCESS_TOKEN_SECRET)
url = "https://api.twitter.com/1.1/followers/ids.json"#こちらで取得する情報を”フォロワー”に指定します。
---
#下記のコードでフォロワーを継続的に取得します。
#TwitterAPIは15分毎に使用制限がかかりますので、それに引っかかった際は960秒間sleepさせます。
#一回のリクエストで5000件取得でき、それと一緒に次の5000件を指定できるネクストページトークンを取得できます。
next_cursor = [None]
ids = []
while not next_cursor[-1] == 0:
  params = {"screen_name":"@screen_name",#ここで調べたいアカウントを指定
            "cursor":next_cursor[-1],#ネクストページトークンを指定
            "count":5000#取得する数
            }
  twitter = OAuth1Session(CONSUMER_KEY,CONSUMER_SECRET,ACCESS_TOKEN,ACCESS_TOKEN_SECRET)
  r = twitter.get(url,params=params)

  if "errors" in r.json():#使用制限に引っかかり、エラーを検知した場合は960秒間sleep
    print(str(r.json()))
    time.sleep(960)

  elif not "errors" in r.json():
    data = r.json()
      
    if data["ids"]:
      for i in data["ids"]:
        ids.append(i)
    elif not data["ids"]:
      print(data["ids"])
    
    #通常、ネクストページトークンは数字の羅列が渡されますが、次のネクストページトークンがない場合、0が渡されます。
    if data["next_cursor"] != 0:
      next_cursor.append(data["next_cursor"])
    elif data["next_cursor"] == 0:
      next_cursor.append(data["next_cursor"])
      print(data["next_cursor"])

---
#フォロワーを全件取得後、ドライブに保存します
s_fileId = searching("filename")
u_fileId = uploading("anycolor_followers",s_fileId,ids)
permissioning(u_fileId)
